weather_owm {
    api_key = a60c97d78f33503b15e16feb11aa8f63
    country = Germany
    city = Augsburg
    unit_rain = mm
    unit_snow = cm
    unit_temperature = c
    unit_wind = kmh
}

pomodoro {
    format = "{bar}"
    timer_pomodoro = 1260 # 21 minute for a session
    timer_break = 180 # 3 minute pause
    pomodoros = 3 # 3 sessions in a row
}

spotify {
	button_next = 4
	button_play_pause = 1
	button_previous = 5
	format = "{title} - {artist}"
	format_down = "AAAHHH"
}
process_status {
	process = "gcc"
}

keyboard_layout {
	layouts = ['us', 'de']
}

audacious {
	cache_timeout = 60
}

systemtrays {
	tray_output none
}

chkeymap {
	on_click 1 = "exec changeKeys"
	format = "exec setxkbmap -print | grep xkb_symbols | awk '{print $4}'"
}

xrandr {
	force_on_start = "DVI0+HDMI0"
	DVI0_pos = "left-of HDMI0"
	DVI0_workspaces = "1,2"
	HDMI0_workspaces = "3,4"
}

# Add mouse clicks to change volume
volume_status {
	button_up = 4
	button_down = 5
	button_mute = 2
	on_click 1 = "exec pavucontrol"
}
arch_updates {
	format = "UPD:{pacman}/{aur}"
	hide_if_zero = True
}
ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E: down"
}
wifi {
    format = "W:{blocks} {ssid}|W:down"
}

battery_level {
        format = "{percent}%"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
		on_click 1 = "exec gsimplecal"
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
		on_click 1 = "exec pcmanfm /"
}
